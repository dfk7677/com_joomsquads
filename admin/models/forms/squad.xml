<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
            name="id"
            type="hidden"
        />
        <field
            name="name"
            type="text"
            label="COM_JOOMSQUADS_SQUAD_NAME_LABEL"
            description="COM_JOOMSQUADS_SQUAD_NAME_DESC"
            size="40"
            class="inputbox required"
            default=""
        />
        <field
            name="short_name"
            type="text"
            label="COM_JOOMSQUADS_SQUAD_SHORTNAME_LABEL"
            description="COM_JOOMSQUADS_SQUAD_SHORTNAME_DESC"
            size="10"
            class="inputbox"
            default=""
        />
        <field
            name="ordering"
            type="number"
            label="COM_JOOMSQUADS_ORDERING"
            description="COM_JOOMSQUADS_ORDERING"
            size="5"
            class="required validate-numeric"
				
        />
		
        <field
            name="published"
            type="radio"
            label="COM_JOOMSQUADS_PUBLISHED"
            description="COM_JOOMSQUADS_DESC_PUBLISHED"
            default="0"
            class="btn-group btn-group-yesno">				
            <option value="0">Unpublished</option>
            <option value="1">Published</option>
        </field>
		
        <field
            name="image"
            type="media"
            label="COM_JOOMSQUADS_IMAGE"
            description="COM_JOOMSQUADS_IMAGE"
            size="5"
            directory="squads"
        />
    </fieldset>
</form>